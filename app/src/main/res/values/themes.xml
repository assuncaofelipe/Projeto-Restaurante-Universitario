<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeuRU" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde_primary</item>
        <item name="colorPrimaryVariant">@color/verde_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color.
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetAPI="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- SplashScreen -->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_splash_screen</item>
        <item name="android:statusBarColor" tools:targetAPI="l">@color/background_splash_screen
        </item>
    </style>

    <!-- Login -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetAPI="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.MeuRU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MeuRU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MeuRU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>